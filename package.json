{
  "name": "csp-record",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "Collect content security policy (CSP) records",
  "keywords": [
    "csp",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "csp-record": "src/csp-record-cli.mjs"
  },
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs"
  },
  "dependencies": {
    "@kronos-integration/service": "^13.2.39",
    "@kronos-integration/service-http": "^13.0.42"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "ava": "^6.4.1",
    "mf-hosting": "^2.9.0",
    "npm-pkgbuild": "^18.3.10",
    "semantic-release": "^24.2.9"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^3.0.3"
  },
  "engines": {
    "node": ">=24.8.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/csp-record.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/csp-record/issues"
  },
  "homepage": "https://github.com/arlac77/csp-record#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "type": "npm-pack"
      },
      "${install.dir}/node_modules": {
        "type": "node-modules"
      },
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${config.dir}config.json": "config/config.json"
    },
    "http.path": "/services/csp",
    "kronos": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
